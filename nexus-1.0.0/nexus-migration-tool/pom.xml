<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<!-- Parent POM -->
	<parent>
		<groupId>org.sonatype.nexus</groupId>
		<artifactId>nexus</artifactId>
		<version>1.0.1</version>
	</parent>

	<!-- the version of maven's project object model -->
	<modelVersion>4.0.0</modelVersion>

    <groupId>org.sonatype.nexus.tools</groupId>
	<!-- a unique name for this project -->
	<artifactId>nexus-migration-tool</artifactId>

	<!-- POM packaging -->
	<packaging>pom</packaging>

	<!-- a short but descriptive name for the project -->
	<name>Nexus Tools :: Migration tool</name>

	<modules>
	  <module>nexus-migration-core</module>
	  <module>nexus-migration-plugin-archiva</module>
	  <module>nexus-migration-plugin-artifactory</module>
	  <module>nexus-migration-plugin-proximity</module>
	  <module>nexus-migration-app</module>
	  <module>nexus-migration-app-swing</module>
	</modules>


	<dependencyManagement>
		<dependencies>
			<!-- The modules -->
			<dependency>
				<groupId>org.sonatype.nexus.tools</groupId>
				<artifactId>nexus-migration-core</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.sonatype.nexus.tools</groupId>
				<artifactId>nexus-migration-app</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.sonatype.nexus.tools</groupId>
				<artifactId>nexus-migration-app-swing</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.sonatype.nexus.tools</groupId>
				<artifactId>nexus-migration-plugin-archiva</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.sonatype.nexus.tools</groupId>
				<artifactId>nexus-migration-plugin-artifactory</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.sonatype.nexus.tools</groupId>
				<artifactId>nexus-migration-plugin-proximity</artifactId>
				<version>${project.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<!-- build information for the project -->
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-enforcer-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>enforce</goal>
						</goals>
						<id>ensure-no-commons-logging</id>
						<configuration>
							<rules>
								<bannedDependencies>
									<excludes>
										<exclude>
											commons-logging:*
										</exclude>
									</excludes>
									<message>
										commons-logging conflicts with
										slf4j. You probably added a
										dependency that is missing the
										exclusions.
									</message>
								</bannedDependencies>
							</rules>
							<fail>true</fail>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.codehaus.plexus</groupId>
					<artifactId>plexus-maven-plugin</artifactId>
				</plugin>
				<plugin>
					<groupId>org.codehaus.modello</groupId>
					<artifactId>modello-maven-plugin</artifactId>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

</project>