<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.nexus</groupId>
    <artifactId>nexus-distributions</artifactId>
    <version>1.9-SNAPSHOT</version>
  </parent>

  <artifactId>nexus-oss-webapp</artifactId>
  <packaging>pom</packaging>

  <name>Nexus : Distros : Nexus OSS Bundle</name>

  <properties>
    <assembly.directory>${project.build.directory}/assembly</assembly.directory>
    <itar-plexus-jsw-app-booter.version>2.1.1-v0001</itar-plexus-jsw-app-booter.version>
    <itar-plexus-app-booter.version>2.1.1-v0001</itar-plexus-app-booter.version>
    <bar-jsw.version>3.2.3-v0004</bar-jsw.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>car-nexus-oss</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-webapp</artifactId>
      <version>${project.version}</version>
      <classifier>itar</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-indexer-lucene-plugin</artifactId>
      <version>${project.version}</version>
      <classifier>bundle</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-capabilities-plugin</artifactId>
      <version>${project.version}</version>
      <classifier>bundle</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-groovy-console-plugin</artifactId>
      <version>${project.version}</version>
      <classifier>bundle</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-archetype-plugin</artifactId>
      <version>${project.version}</version>
      <classifier>bundle</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.runtime.itars</groupId>
      <artifactId>itar-plexus-jsw-app-booter</artifactId>
      <version>${itar-plexus-jsw-app-booter.version}</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-plugin-console-plugin</artifactId>
      <version>${project.version}</version>
      <classifier>bundle</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-core-documentation-plugin</artifactId>
      <version>${project.version}</version>
      <classifier>bundle</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-plugin-manager</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus.plugins</groupId>
      <artifactId>nexus-rrb-plugin</artifactId>
      <version>${project.version}</version>
      <classifier>bundle</classifier>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>itar-plexus-container-guice</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.runtime.itars</groupId>
      <artifactId>itar-plexus-app-booter</artifactId>
      <version>${itar-plexus-app-booter.version}</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-oss-edition</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.sonatype.runtime.itars</groupId>
      <artifactId>itar-work-dir</artifactId>
      <version>0.1.0</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.runtime.bars</groupId>
      <artifactId>bar-jsw</artifactId>
      <version>${bar-jsw.version}</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.sonatype.nexus.plugins.ldap</groupId>
      <artifactId>nexus-ldap-realm-plugin</artifactId>
      <version>${project.version}</version>
      <classifier>bundle</classifier>
      <type>zip</type>
    </dependency>

    <!-- <dependency> <groupId>org.sonatype.nexus</groupId> <artifactId>itar-nexus-plugin-manager-guice</artifactId> <version>${project.version}</version> <type>zip</type> </dependency> -->
  </dependencies>


  <build>
    <plugins>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${assembly.directory}</outputDirectory>
              <resources>
                <resource>
                  <directory>src/assembly</directory>
                  <filtering>true</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.sonatype.plugins</groupId>
        <artifactId>maven-runtime-assembler-plugin</artifactId>
        <version>0.1.3</version>
        <configuration>
          <formats>
            <format>zip</format>
            <format>tar.gz</format>
          </formats>
        </configuration>
        <executions>
          <execution>
            <id>fragments</id>
            <phase>process-resources</phase>
            <goals>
              <goal>attach-descriptor</goal>
            </goals>
            <configuration>
              <assemblyDescriptor>${assembly.directory}/fragments.xml</assemblyDescriptor>
            </configuration>
          </execution>
          <execution>
            <id>guice-jsw-minimal</id>
            <phase>process-resources</phase>
            <goals>
              <goal>attach-descriptor</goal>
            </goals>
            <configuration>
              <assemblyDescriptor>${assembly.directory}/runtime-guice-jsw-minimal.xml</assemblyDescriptor>
            </configuration>
          </execution>
          <execution>
            <id>guice-jsw-oss</id>
            <phase>process-resources</phase>
            <goals>
              <goal>assemble</goal>
            </goals>
            <configuration>
              <assemblyDescriptor>${assembly.directory}/runtime-guice-jsw-oss.xml</assemblyDescriptor>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>tattletale</id>

      <properties>
        <tattletale-source-directory>${project.build.directory}/tattletale-source</tattletale-source-directory>
        <tattletale-destination-directory>${project.build.directory}/tattletale</tattletale-destination-directory>
      </properties>

      <build>
        <plugins>
          <!-- tattletale expects all jars on the same folder -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <version>2.1</version>
            <executions>
              <execution>
                <id>tattletale-jars</id>
                <phase>verify</phase>
                <goals>
                  <goal>copy-dependencies</goal>
                </goals>
                <configuration>
                  <outputDirectory>${tattletale-source-directory}</outputDirectory>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <!-- do it! -->
          <plugin>
            <groupId>org.jboss.tattletale</groupId>
            <artifactId>tattletale-maven</artifactId>
            <version>1.1.0.Final</version>
            <executions>
              <execution>
                <id>run-tattletale-report</id>
                <phase>verify</phase>
                <goals>
                  <goal>report</goal>
                </goals>
                <configuration>
                  <source>${tattletale-source-directory}</source>
                  <destination>${tattletale-destination-directory}</destination>
                  <profiles>
                    <profile>java5</profile>
                  </profiles>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
