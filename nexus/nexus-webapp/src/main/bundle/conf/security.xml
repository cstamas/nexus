<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<security xmlns="http://nexus.sonatype.org/xml/ns/security">
  <user>
    <user-name>dain</user-name>
    <password>naid</password>
    <role>developer</role>
  </user>

  <user>
    <user-name>jason</user-name>
    <password>nosaj</password>
    <role>admin</role>
  </user>

  <user>
    <user-name>admin</user-name>
    <password>nosaj</password>
    <role>admin</role>
  </user>

  <role>
    <role-name>admin</role-name>
    <sub-role>developer</sub-role>
    <permission>authentication</permission>
    <permission>delete-artifact</permission>
    <permission>deploy-artifact</permission>
    <permission>index-repository</permission>
  </role>

  <role>
    <role-name>developer</role-name>
    <permission>read-artifact</permission>
  </role>


  <permission>
    <permission-id>authentication</permission-id>
    <class>org.sonatype.nexus.security.RestPermission</class>
    <name>/nexus/service/local/authentication/.*</name>
    <actions>GET</actions>
  </permission>

  <permission>
    <permission-id>read-artifact</permission-id>
    <class>org.sonatype.nexus.security.RestPermission</class>
    <name>/repositories/.*</name>
    <actions>GET</actions>
  </permission>

  <permission>
    <permission-id>delete-artifact</permission-id>
    <class>org.sonatype.nexus.security.RestPermission</class>
    <name>/repositories/.*</name>
    <actions>DELETE</actions>
  </permission>

  <permission>
    <permission-id>deploy-artifact</permission-id>
    <class>org.sonatype.nexus.security.RestPermission</class>
    <name>/repositories/.*</name>
    <actions>PUT</actions>
  </permission>

  <permission>
    <permission-id>index-repository</permission-id>
    <class>org.sonatype.nexus.security.RestPermission</class>
    <name>/repository_index/.*</name>
    <actions>GET</actions>
  </permission>

</security>