<component>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/${pom.build.finalName}/runtime/apps/nexus/lib</outputDirectory>
      <fileMode>0644</fileMode>
      <scope>runtime</scope>
      <excludes>
        <exclude>org.sonatype.appbooter.plexus-platforms:plexus-platform-jsw</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/${pom.build.finalName}/runtime/apps/nexus/lib</outputDirectory>
      <fileMode>0644</fileMode>
      <scope>provided</scope>
      <includes>
        <include>javax.servlet:servlet-api</include>
      </includes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>src/main/assembly/bundle</directory>
      <outputDirectory>/${pom.build.finalName}/runtime/apps/nexus</outputDirectory>
      <fileMode>0644</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/main/webapp</directory>
      <outputDirectory>/${pom.build.finalName}/runtime/apps/nexus/webapp</outputDirectory>
      <includes>
        <include>*</include>
        <include>docs/*</include>
        <include>ext-2.2/ext-all.js</include>
        <include>ext-2.2/adapter/ext/ext-base.js</include>
        <include>ext-2.2/resources/css/ext-all.css</include>
        <include>ext-2.2/resources/css/xtheme-gray.css</include>
        <include>ext-2.2/resources/images/**</include>
        <include>images/**</include>
        <include>js/*</include>
        <include>js/extensions/*</include>
        <include>js/filetree/js/Ext.ux.form.BrowseButton.js</include>
        <include>js/repoServer/*</include>
        <include>style/Sonatype.css</include>
        <include>WEB-INF/*</include>
      </includes>
      <excludes>
        <!-- The plexus.xml and plexus.properties files used in the bundle come from src/main/assembly/base-bundle/conf, 
             where these are used in the WAR archive. We don't want to confuse things by leaving these in... -->
        <exclude>WEB-INF/plexus*</exclude>
        
        <!-- The web.xml for the bundle comes from the src/main/assembly/bundle/webapp/WEB-INF directory. 
             This one is for the WAR archive. -->
        <exclude>WEB-INF/web.xml</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>target/nexus-tools</directory>
      <outputDirectory>/${pom.build.finalName}/runtime/apps/nexus/tools</outputDirectory>
      <fileMode>0644</fileMode>
    </fileSet>
    <fileSet>
      <directory>target/gzip-web-content</directory>
      <outputDirectory>/${pom.build.finalName}/runtime/apps/nexus/webapp</outputDirectory>
    </fileSet>
  </fileSets>
</component>
