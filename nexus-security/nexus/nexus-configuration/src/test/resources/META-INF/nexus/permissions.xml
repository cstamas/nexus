<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<rbac xmlns="http://geronimo.apache.org/xml/ns/rbac-xml">
  <scope>
    <scope-name>sonatype</scope-name>
    <scope>
      <scope-name>nexus</scope-name>

      <permission>
        <permission-id>read-artifact</permission-id>
        <class>org.sonatype.nexus.security.RestPermission</class>
        <name>/repositories/*</name>
        <actions>GET</actions>
      </permission>
      <permission>
        <permission-id>delete-artifact</permission-id>
        <class>org.sonatype.nexus.security.RestPermission</class>
        <name>/repositories/*</name>
        <actions>DELETE</actions>
      </permission>
      <permission>
        <permission-id>deploy-artifact</permission-id>
        <class>org.sonatype.nexus.security.RestPermission</class>
        <name>/repositories/*</name>
        <actions>PUT</actions>
      </permission>

      <permission>
        <permission-id>index-repository</permission-id>
        <class>org.sonatype.nexus.security.RestPermission</class>
        <name>/repository_index/*</name>
        <actions>GET</actions>
      </permission>
    </scope>
  </scope>
</rbac>